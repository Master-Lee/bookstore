<!doctype html>
<html lang="en">
<head lang="en">
    <% include head.ejs %>
</head>    
<body>
    <% include navbar.ejs %>
    <div class="container" style="margin-top: 86px">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">修改图书信息</div>
                <div class="panel-body">
                    <form method="post" action="/user/<%= user._id %>/books" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="control-label col-md-2">书籍名称</label>
                            <div class="col-md-9">
                                <input class="form-control" type="text" name="caption" required value="<%- book.caption %>" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">书籍类型</label>
                            <div class="col-md-9">
                                <select required name="type" class="form-control">
                                    <option value="前端">前端</option>
                                    <option value="后端">后端</option>
                                    <option value="算法">算法</option>
                                    <option value="数据库">数据库</option>
                                    <option value="操作系统">操作系统</option>
                                </select>
                                <script>
                                    $("option").each(function() {
                                        if($(this).val() === '<%- book.type %>'){
                                            $(this).prop("selected", "selected")
                                        }
                                    })
                                </script>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">旧封面图</label>
                            <div class="col-md-offset-1 col-md-8">
                                <img src="/<%- book.coverImg %>" class="img-responsive img-rounded">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">新封面图</label>
                            <div class="col-md-9">
                                <input name="coverImg" class="form-control" type="file"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">书籍简介</label>
                            <div class="col-md-9">
                                <textarea name="description" class="form-control" rows="5"><%- book.description %></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6 text-center">
                                <input class="btn btn-warning" type="reset" value="重置"/>
                            </div>
                            <div class="col-xs-6 text-center">
                                <input class="btn btn-primary" type="submit" value="确认"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>